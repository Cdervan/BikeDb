<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <TabPane prefHeight="327.0" prefWidth="357.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Bikes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="313.0" prefWidth="387.0">
                     <children>
                        <TableView fx:id="tvBikes" layoutX="4.0" layoutY="84.0" prefHeight="200.0" prefWidth="349.0">
                          <columns>
                            <TableColumn fx:id="colHandleBars" prefWidth="75.0" text="HandleBars" />
                            <TableColumn fx:id="colNumGears" prefWidth="75.0" text="Num Gears" />
                          </columns>
                        </TableView>
                        <Button fx:id="btnAddBike" layoutX="272.0" layoutY="39.0" mnemonicParsing="false" onAction="#addBike" text="Add Bike" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</GridPane>
